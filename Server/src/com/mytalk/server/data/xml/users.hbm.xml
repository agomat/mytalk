<?xml version="1.0" encoding="utf-8"?> 
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	
	<hibernate-mapping>
		<class name="com.mytalk.server.data.model.User" table="Users">
			<id name="username" column="username" type="string"></id>
			<property name="id" column="id" type="integer"></property>
			<property name="email" column="email" type="string"></property>
			<property name="name" column="name" type="string"></property>
			<property name="surname" column="surname" type="string"></property>
			<property name="password" column="password" type="string"></property>
		</class>
	</hibernate-mapping> 
